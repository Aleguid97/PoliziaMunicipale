﻿@model PoliziaMunicipale.Models.Verbale

@{
    ViewBag.Title = "Verbale";
}

<h2 class="mb-3"> Inserisci un Nuovo Verbale</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.DataViolazione, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DataViolazione, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                        @Html.ValidationMessageFor(model => model.DataViolazione, "", new { @class = "text-danger" })
                        <div>
                            @Html.DisplayFor(model => model.DataViolazione)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataVerbale, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DataVerbale, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DataVerbale, "", new { @class = "text-danger" })
                        <div>
                            @Html.DisplayFor(model => model.DataVerbale)
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.IndirizzoViolazione, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.IndirizzoViolazione, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IndirizzoViolazione, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nominativo_Agente, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Nominativo_Agente, new SelectList(ViewBag.ListaAgenti, "IDviolazione"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nominativo_Agente, "", new { @class = "text-danger" })
                        @*@Html.HiddenFor(model => model.id_Anagrafica)*@
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-horizontal">



                <div class="form-group">
                    @Html.LabelFor(model => model.Importo, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Importo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Importo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DecurtamentoPunti, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DecurtamentoPunti, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DecurtamentoPunti, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDviolazione, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IDviolazione, new SelectList(ViewBag.ListaViolazioni, "Nominativo_Agente"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDviolazione, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDanagrafica, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.IDanagrafica, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IDanagrafica, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Altri campi per la seconda colonna -->

            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary btn-sm mt-2" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}