@model IEnumerable<PoliziaMunicipale.Models.Violazioni>

@{
    ViewBag.Title = "Violazioni";
}

<h2>Elenco Violazioni</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDviolazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descrizione_Verbale)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IDverbale)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDviolazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrizione_Verbale)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IDverbale)
                    </td>*@
                <td>
                    <div class="d-grid gap-2 d-md-block">
                        @Html.ActionLink("Edit", "Modifica", new { id = item.IDviolazione }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDviolazione }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
